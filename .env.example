# Exemplo de arquivo .env para o projeto de granja
# Copie este arquivo para .env e preencha com seus valores

# Configuração do banco de dados
DATABASE_URL=sqlite:///instance/site.db

# Chave secreta para sessões (gere uma chave única)
SECRET_KEY=sua_chave_secreta_muito_segura_aqui

# Configuração do Flask
FLASK_ENV=development
FLASK_DEBUG=True

# Configuração de email (se usado)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_de_app

# Configuração de JWT
JWT_SECRET_KEY=sua_chave_jwt_secreta_aqui
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configuração de upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads/

# Configuração de logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log